pipeline {
    agent any
    
    // Add this tools block to fix "mvn: not found"
    tools {
        // 'Maven3' must match the name configured in 
        // Manage Jenkins -> Tools -> Maven installations
        maven 'Maven3' 
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    // Record JUnit test results for 2026 reporting
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') { 
            steps {
                sh './jenkins/scripts/deliver.sh' 
            }
        }
    }
}
